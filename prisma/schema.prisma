// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
model Review{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  reviewer String
  review String
  rating Int
}
model Expense {
   id String @id @default(auto()) @map("_id") @db.ObjectId
   name String
   rate String
   total String 
}

model Stay {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String
  website   String?  
  location  Json   
  landmark  String
  contact   String
  manager   String
}

model Place{
  id                     Int         @id @default(auto()) @map("_id") @db.ObjectId
  photos                String
  place                 String
  description           String?
  location              String
  longitiude            Float
  latitude              Float
  mode_of_travel        String
  stay                  String
  tourist_ocation      String
  blog                  String
  upvotes               Int
  downvotes             Int
  expense               Int

}